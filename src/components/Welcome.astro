---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="container">
	<main class="card">
		<h1>{t("welcome.title")}</h1>
		<div style="aspect-ratio: 1; border: 1px solid #dadada"></div>
	</main>
	<aside class="card">
		<h2 class="contact">{t("welcome.contact")}</h2>
		<ul>
			<li>
				<a href="tel:+15149150196">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						class="size-6"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"
						></path>
					</svg>

					<span>(514) 915-0196</span>
				</a>
			</li>
			<li>
				<a href="mailto:info@recregestion.com">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						class="size-6"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
						></path>
					</svg>

					<span>info@recregestion.com</span>
				</a>
			</li>
			<li>
				<a
					href="https://www.centredeformationaquatiqueduquebec.com/"
					target="_blank"
					rel="noopener"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						class="size-6"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418"
						></path>
					</svg>
					<span class="website"
						>www.centredeformationaquatiqueduquebec.com/</span
					>
				</a>
			</li>
		</ul>
	</aside>

	<style>
		.container {
			margin-inline: auto;
			padding-block: 2rem;
			padding-inline: 2rem;

			display: flex;
			flex-direction: column;
			gap: 2rem;

			@media screen and (min-width: 45rem) {
				& {
					width: fit-content;
				}
				main {
					width: 45rem;
				}
			}
			@media screen and (min-width: 70rem) {
				& {
					flex-direction: row-reverse;
					align-items: start;
				}
			}
		}

		h1 {
			text-box-trim: trim-both;
			margin-bottom: 0.75em;
		}

		aside {
			h2 {
				text-box-trim: trim-both;
				margin-bottom: 0.75em;
			}

			ul {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
			}

			a {
				display: flex;
				align-items: center;
				gap: 0.75rem;
			}

			svg {
				width: 1.25rem;
				height: 1.25rem;
				stroke: currentColor;
				fill: none;
				stroke-width: 1.75;
				flex-shrink: 0;
			}

			.website {
				word-break: break-word;
				display: block;
			}
		}

		@media screen and (min-width: 768px) {
			.card {
				border-radius: 2rem;
				/* https://getcssscan.com/css-box-shadow-examples */
				box-shadow:
					rgba(17, 17, 26, 0.1) 0px 8px 24px,
					rgba(17, 17, 26, 0.1) 0px 16px 56px,
					rgba(17, 17, 26, 0.1) 0px 24px 80px;
				padding: 2rem;
			}
		}
	</style>
</div>
